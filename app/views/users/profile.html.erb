<h3>プロフィール</h3>
<hr>

<table>
  <tr>
    <th>アイコン画像</th>
    <td>
      <% if @user.icon? %>
        <%= image_tag @user.icon.url  %>
      <% else %>
        <%= image_tag ("default.png")  %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th>名前</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>自己紹介</th>
    <td><%= @user.introduction %></td>
  </tr>
</table>

<p><%= link_to "編集",users_profile_edit_path %></p>
<p><%= link_to "アカウント",users_account_path %></p>
<p><%= link_to "施設一覧へ",:rooms %></p>