<div class="wrapper">
  <h3 class="room_title">施設情報更新</h3>
  <% if flash['warning'] %>
    <p class="warning"><%= flash['warning'] %></p>
  <% end %>
  <%= render "shared/error",obj:@room %>
  <%= form_with model: @room do |f| %>
    <table  class="room_table">
      <tr>
        <th><%= f.label :introduction ,"施設詳細" %></th>
        <td><%= f.text_area :introduction %></td>
      </tr>
      <tr>
        <th><%= f.label :name ,"施設名" %></th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th><%= f.label :fee ,"料金" %></th>
        <td><%= f.text_field :fee %></td>
      </tr>
      <tr>
        <th><%= f.label :address ,"住所" %></th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th><%= f.label :image ,"施設画像" %></th>
        <td><%= f.file_field :image %></td>
      </tr>
    </table>
    <ul class="btn_group">
      <li><%= link_to "施設情報一覧に戻る",own_rooms_path,class:"left_btn" %></li>
      <li><%= f.submit "更新する" %></li>
    </ul>
  <% end %>
</div>
