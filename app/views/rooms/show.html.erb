<div class="wrapper">
<h3 class="room_title">施設詳細</h3>
<div class="current_user_btn">

  <%= link_to "施設一覧に戻る", :rooms %>
<% if @room.user_id == current_user.id %>
    <%= link_to "編集",[:edit,@room] %>
<% end %>
</div>

 <%= render "shared/error",obj: @reservation %>
 <table  class="room_table">
      <tr>
       <th>施設名</th>
       <td><%= @room.name %></td>
      </tr>
      <tr>
      <th>施設画像</th>
        <td>
        <% if @room.image? %>
          <%= image_tag @room.image.url %>
      <% else %>
          <%= image_tag ("room_default.png") %>
      <% end %>
        </td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @room.address %></td>
      </tr>
      <tr>
       <th>紹介文</th>
       <td><%= @room.introduction %></td>
      </tr>
      <tr>
       <th>宿泊料金</th>
       <td><%= @room.fee %> 円</td>
      </tr>
      <tr>
        <td colspan="2">
        <%= form_with model: @reservation, url: confirm_reservations_path do |f| %>
          <div>
            <div>
              <div><%= f.label :check_in,"チェックイン"%></div>
              <div><%= f.date_field :check_in %></dev>
            </div>
            <div>
              <div><%= f.label :check_out,"チェックアウト" %></div>
              <div><%= f.date_field :check_out %></dev>
            </div>
            <div>
              <div><%= f.label :users_num,"人数" %></div>
              <div><%= f.text_field :users_num %> 人</dev>
            </div>
          </div>
          <% if user_signed_in? %>
            <%= f.hidden_field :user_id,value: current_user.id %>
            <%= f.hidden_field :room_id,value: @room.id %>
            <div><%= f.submit "予約する" %></div>
          <% else %>
            <%= link_to "ログインする",new_user_session_path %>
          <% end %>
        <% end %>
        </td>
      </tr>
 </table>
 </div>

 
