<h3>施設詳細</h3>
 <%= render "shared/error",obj: @reservation %>
 <table>
   <thead>
     <tr>
       <th>施設画像</th>
       <th>施設名</th>
       <th>紹介文</th>
       <th>宿泊料金</th>
     </tr>
   </thead>
   <tbody>
       <tr>
         <td>
         <% if @room.image? %>
            <%= image_tag @room.image.url %>
        <% else %>
            <%= image_tag ("room_default.png") %>
        <% end %>
         </td>
         <td><%= @room.name %></td>
         <td><%= @room.introduction %></td>
         <td><%= @room.fee %></td>
       </tr>
   </tbody>
 </table>
<%= form_with model: @reservation, url: confirm_reservations_path do |f| %>
  <div>
    <div>
      <div><%= f.label :check_in,"チェックイン"%></div>
      <div><%= f.date_field :check_in %></dev>
    </div>
    <div>
      <div><%= f.label :check_out,"チェックアウト" %></div>
      <div><%= f.date_field :check_out %></dev>
    </div>
    <div>
      <div><%= f.label :users_num,"人数" %></div>
      <div><%= f.text_field :users_num %></dev>
    </div>
  </div>
  <% if user_signed_in? %>
    <%= f.hidden_field :user_id,value: current_user.id %>
    <%= f.hidden_field :room_id,value: @room.id %>
    <div><%= f.submit "予約する" %></div>
  <% else %>
    <%= link_to "ログインする",new_user_session_path %>
  <% end %>
<% end %>
 <%= link_to "更新",[:edit,@room] %>
 <p><%= link_to "施設一覧に戻る", :rooms %></p>